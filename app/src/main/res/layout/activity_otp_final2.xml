<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix"
    tools:context=".MainActivity" >

    <ImageView
        android:layout_height="50dp"
        android:id="@+id/temp"
        android:layout_width="match_parent"
        android:background="#0077B8"
        />

    <RelativeLayout android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_below="@+id/temp"
        android:layout_width="match_parent">
    <ImageView
        android:id="@+id/welcome"
        android:textStyle="bold"
        android:textColorHint="#999999"
        android:src="@drawable/logo"
        android:padding="10dp"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        >
    </ImageView>
    <EditText
        android:id="@+id/name"
        android:hint=" Name"
        android:textColorHint="#999999"
        android:singleLine="true"
        android:textColor="#666666"
        android:padding="10dp"
        android:textSize="15dp"
        android:layout_width="fill_parent"
        android:drawableLeft="@drawable/ic_person_black_18dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome"
        android:background="#22000000">
    </EditText>
    <EditText
        android:id="@+id/email"
        android:hint=" Email"
        android:textColorHint="#999999"
        android:padding="10dp"
        android:textSize="15dp"
        android:textColor="#666666"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:drawableLeft="@drawable/ic_mail_black_18dp"
        android:layout_below="@+id/name"
        android:layout_marginTop="20dp"
        android:background="#22000000">
    </EditText>
    <EditText
        android:id="@+id/college"
        android:hint=" Institute affiliated to"
        android:textColorHint="#999999"
        android:padding="10dp"
        android:textSize="15dp"
        android:layout_width="fill_parent"
        android:drawableLeft="@drawable/ic_school_black_18dp"
        android:textColor="#666666"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_below="@+id/email"
        android:layout_marginTop="20dp"
        android:background="#22000000">
    </EditText>
    <EditText
        android:id="@+id/otp"
        android:hint=" Enter OTP here"
        android:textColorHint="#999999"
        android:singleLine="true"
        android:padding="10dp"
        android:textSize="15dp"
        android:textColor="#666666"
        android:inputType="number"
        android:layout_width="fill_parent"
        android:drawableLeft="@drawable/ic_vpn_key_black_18dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/college"
        android:layout_marginTop="20dp"
        android:background="#22000000">
    </EditText>

    <Button
        android:id="@+id/button"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/otp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:background="#0077B8"
        android:text="Submit OTP" />
</RelativeLayout>
</RelativeLayout>
</ScrollView>